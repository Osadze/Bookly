<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/admin.css">
    <%- include('../includes/nav.ejs') %>
        <main class="product-cnt">
            <%if (prods.length> 0) {%>
                <% for (let product of prods) { %>
                    <div class="product__card">
                        <a href="#">
                            <div class="product__image" style="background-image: url('<%= product.img %>');">
                            </div>
                        </a>
                        <div class="product__description__cnt">
                            <h2 class="product__title">
                                <%= product.title %>
                            </h2>
                            <p class="product__description">
                                <%= product.description %>
                            </p>
                        </div>
                        <div class="product__footer">
                            <a href="/admin/edit-product" id="edit"><i class="edit__icon"></i></a>
                            <form action="/admin/delete-product" method="POST" id="delete"><button type="submit"><i
                                        class="delete__icon"></i></button></form>
                            <h4 class="product__price">
                                $ <%= product.price %>
                            </h4>
                        </div>
                    </div>
                    <% } %>
                        <% } else { %>
                            <h1 class="no__products">No Products</h1>
                            <% } %>
        </main>

        <%- include('../includes/end.ejs') %>