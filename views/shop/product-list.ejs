<%- include('../includes/head.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main class="product-cnt">
            <%if (prods.length> 0) {%>
                <% for (let product of prods) { %>
                    <div class="product__card">
                        <a href="/products/<%= product.id %>">
                            <div class="product__image" style="background-image: url('<%= product.img %>');">
                            </div>
                        </a>
                        <div class="product__description__cnt">
                            <h2 class="product__title">
                                <%= product.title %>
                            </h2>
                            <p class="product__description">
                                <%= product.description %>
                            </p>
                        </div>
                        <div class="product__footer">
                            <a href="/products/<%= product.id %>"><i class="details__icon"></i></a>
                            <form action="/cart" method="POST" id="addToCart">
                                <button type="submit"><i class="addTo__cart__icon"></i></button>
                                <input type="hidden" name="productId" value="<%= product.id %>">
                            </form>
                            <h4 class="product__price">
                                $ <%= product.price %>
                            </h4>
                        </div>
                    </div>
                    <% } %>
                        <% } else { %>
                            <h1 class="no__products">No Products</h1>
                            <% } %>
        </main>

        <%- include('../includes/end.ejs') %>